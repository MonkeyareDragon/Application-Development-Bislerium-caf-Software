@page "/login"
@inherits LayoutComponentBase
@using BisleriumCafé.Data.Models
@using System.Collections.Generic
@inject NavigationManager NavManager

<div class="login-container">
    <h1>Welcome to <span>Bislerium café</span></h1>
    <p>Please sign in to continue.</p>
    <EditForm model="staffModel" OnValidSubmit="SetLogin">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="input-field">
            <label for="username">Name</label>
            <InputText id="Name" type="text" @bind-Value="staffModel.Name" class="form-control" />
        </div>
        <div class="input-field">
            <label for="password">Password</label>
            <InputText id="Password" @bind-Value="password" type="password" class="form-control" />
        </div>
        <button type="submit" class="login-btn">LOGIN</button>
    </EditForm>
</div>

@code {
    StaffModel staffModel = new StaffModel();
    private string password;

    private void SetLogin()
    {
        // Validate login logic here
        if (ValidatePassword(password, StaffPassword.StaffPass123))
        {
            staffModel.Role = StaffRole.Staff;
            ShowLoginSuccessMessage(StaffRole.Staff);
            NavigateToIndex();
        }
        else if (ValidatePassword(password, StaffPassword.AdminPass456))
        {
            staffModel.Role = StaffRole.Admin;
            ShowLoginSuccessMessage(StaffRole.Admin);
            NavigateToIndex();
        }
        else
        {
            ShowLoginErrorMessage();
        }
    }

    private void ShowLoginSuccessMessage(StaffRole role)
    {
        App.Current.MainPage.DisplayAlert("Success", $"Hello {role}, You have successfully logged in!", "Ok");
    }

    private void ShowLoginErrorMessage()
    {
        App.Current.MainPage.DisplayAlert("Error!", "Invalid credentials. Please try again.", "Ok");
    }

    private void NavigateToIndex()
    {
        try
        {
            NavManager.NavigateTo("/index");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error navigating to index page: {ex.Message}");
        }
    }


    private bool ValidatePassword(string enteredPassword, StaffPassword expectedPassword)
    {
        return enteredPassword == expectedPassword.ToString();
    }
}
